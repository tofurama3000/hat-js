{
  "name": "@tofurama3000/hat-js",
  "version": "0.0.7-pre",
  "types": "./dist/index.d.ts",
  "author": "Matt Tolman",
  "repository": {
    "url": "https://github.com/tofurama3000/hat-js"
  },
  "license": "MIT",
  "private": false,
  "main": "hat-js.umd.js",
  "module": "hat-js.esm.js",
  "devDependencies": {
    "@babel/preset-env": "^7.6.3",
    "jest": "^25.0.0",
    "prettier": "^1.18.2",
    "rollup": "^1.25.2",
    "rollup-plugin-terser": "^5.1.2"
  },
  "scripts": {
    "test": "jest --coverage",
    "build": "npm run format && rollup -c && cp package.json dist/ && cp README.md dist/ && cp LICENSE dist/",
    "format": "prettier --write \"src/**/*.js\"",
    "clean": "rm -rf dist",
    "pub": "npm run test && npm run build && npm publish dist"
  },
  "jest": {
    "coverageReporters": [
      "cobertura",
      "lcov"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "testRegex": ".*\\.spec\\.js$"
  },
  "dependencies": {}
}
